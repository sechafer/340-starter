<!-- if statement, if title then display title, else redirect -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>
    
    <!-- message -->
    <%- messages() %>

<% if (errors) { %>
    <ul class="notice">
    <% errors.array().forEach(error => { %>
        <% if (error.msg != "Invalid value") { %>
            <li><%= error.msg %></li>
        <% } %>
    <%  }) %>
    </ul>
    <% } %>
    
<!-- Inventory items display -->
<div id="add-inventory">
    <form action="/inv/add-vehicle" method="post">
        <p>ALL FIELDS ARE REQUIRED</p>

        <p id="classificasion_id">Classification</p>
        <%- classificationList %>

        <label for="inv_make">Make</label>
        <input type="text" name="inv_make" id="inv_make" pattern="^[A-Z][a-z]{2,15}$" placeholder="Min of 3 characters" required value="<%= locals.inv_make %>">
        
        <label for="inv_model">Model</label>
        <input type="text" name="inv_model" id="inv_model" pattern="^[A-Z][a-z]{2,15}$" placeholder="Min of 3 characters" required value="<%= locals.inv_model %>">
        
        <label for="inv_description">Description</label>
        <input type="text" name="inv_description" id="inv_description" pattern="^[A-Z][a-z](?=.*[a-zA-Z0-9]){2,500}$" required value="<%= locals.inv_description %>" rows="4" cols="50">
        
        <label for="inv_image">Image Path</label>
        <input type="text" name="inv_image" id="inv_image" value="/images/vehicles/no-image.png" required value="<%= locals.inv_image %>">
        
        <label for="inv_thumbnail">Thumbnail Path</label>
        <input type="text" name="inv_thumbnail" id="inv_thumbnail" value="/images/vehicles/no-image-tn.png" required value="<%= locals.inv_thumbnail %>">
        
        <label for="inv_price">Price</label>
        <input type="text" name="inv_price" id="inv_price" pattern="^[^,a-zA-Z]+[0-9\.0-9]{1,7}$" placeholder="Decimal or integer" required value="<%= locals.inv_price %>">
        
        <label for="inv_year">Year</label>
        <input type="text" name="inv_year" id="inv_year" pattern="^[0-9]{4}$" placeholder="4-digit year" required value="<%= locals.inv_year %>">
        
        <label for="inv_miles">Miles</label>
        <input type="text" name="inv_miles" id="inv_miles" pattern="^[0-9]{1,6}$" placeholder="Digits only" required value="<%= locals.inv_miles %>">
        
        <label for="inv_color">Color</label>
        <input type="text" name="inv_color" id="inv_color" placeholder="" required value="<%= locals.inv_color %>">
        <!-- "^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" -->

        <button type="submit">Add Vehicle</button>
        
    </form>
</div>