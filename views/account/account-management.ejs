<!-- if statement, if title then display title, else redirect -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>
    
    <!-- message -->
    <%- messages() %>

<% if (errors) { %>
    <ul class="notice">
    <% errors.array().forEach(error => { %>
        <% if (error.msg != "Invalid value") { %>
            <li><%= error.msg %></li>
        <% } %>
    <%  }) %>
    </ul>
    <% } %>
    
<!-- Your account display -->
<div class="account-management">
    <h2>Welcome <%- name %></h2>
    <p>You're logged in</p>
    <a href="/account/update/<%- accountId %>" title="Edit your information">Edit account information</a>
</div>

